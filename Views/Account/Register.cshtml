@model book_store_for_developers.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_RightSectionLayout.cshtml";
}

<h2>Register</h2>

@section SectionTitle
{
    Register
}

<div>
@using (@Html.BeginForm("Register", "Account"))
{
    @Html.AntiForgeryToken()

    <div id="login-error">
        @Html.ValidationMessage("loginerror", "")
        @Html.ValidationSummary()
    </div>

    <table id="login-table" style="margin-left: auto; margin-right: auto;">
        <tr>
            <td>@Html.LabelFor(o => o.Email, "E-mail:")</td>
            <td>
                @Html.TextBoxFor(o => o.Email)
                <div class="login-validation-message">
                    @Html.ValidationMessageFor(o => o.Email)
                </div>
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(o => o.Password, "Password:")</td>
            <td>
                @Html.PasswordFor(o => o.Password)
                <div class="login-validation-message">
                    @Html.ValidationMessageFor(o => o.Password)
                </div>
            </td>
            <td></td>
        </tr>
        <tr>
            <td style="padding: 0px 20px 0px 0px; text-align: left;">
                @Html.LabelFor(o => o.ConfirmPassword, "Confirm password:")
            </td>
            <td style="padding: 0px; text-align: left;">
                @Html.PasswordFor(o => o.ConfirmPassword)
                <div class="login-validation-message">
                    @Html.ValidationMessageFor(o => o.ConfirmPassword)
                </div>
            </td>
            <td></td>
        </tr>
        <tr>
            <td></td>
            <td colspan="2" style="text-align: right; padding-right: 20px;">
                
                <div class="button_container">

                    <a  class="submitLink" id="cart-button-pay" href="index.htm" type="submit" value="Register"> </a>
                    <button type="submit" value="Register" class="btn"><span>Register</span></button>

                </div>
            </td>
        </tr>
    </table>
}
</div>

@section Scripts
{
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
